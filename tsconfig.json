{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*", "interface/**/*"],
    "exclude": ["node_modules", "dist"]
}